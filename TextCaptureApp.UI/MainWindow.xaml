<Window x:Class="TextCaptureApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextCaptureApp.UI"
        xmlns:vm="clr-namespace:TextCaptureApp.UI.ViewModels"
        xmlns:conv="clr-namespace:TextCaptureApp.UI.Converters"
        mc:Ignorable="d"
        Title="Text Capture App - OCR and Export" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF">
    
    <Window.Resources>
        <!-- Converters -->
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <ContentPresenter Content="{TemplateBinding Content}" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Export Button Style -->
        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Icon Paths -->
        <PathGeometry x:Key="ImageIcon" Figures="M21,19V5C21,3.89 20.1,3 19,3H5C3.89,3 3,3.89 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19M19,19H5V5H19V19Z"/>
        <PathGeometry x:Key="CameraIcon" Figures="M12,12M17,3H7C5.89,3 5,3.89 5,5V19C5,20.1 5.9,21 7,21H17C18.1,21 19,20.1 19,19V5C19,3.89 18.1,3 17,3M12,7C13.62,7 15,8.38 15,10C15,11.62 13.62,13 12,13C10.38,13 9,11.62 9,10C9,8.38 10.38,7 12,7Z"/>
        <PathGeometry x:Key="OcrIcon" Figures="M14,3H4C2.89,3 2,3.89 2,5V19C2,20.1 2.9,21 4,21H14C15.1,21 16,20.1 16,19V5C16,3.89 15.1,3 14,3M14,19H4V5H14V19Z"/>
        <PathGeometry x:Key="SaveIcon" Figures="M17,3H5C3.89,3 3,3.9 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V7L17,3M19,19H5V5H16.17L19,7.83V19M12,12C10.34,12 9,13.34 9,15S10.34,18 12,18 15,16.66 15,15 13.66,12 12,12M6,6H15V10H6V6Z"/>
        <PathGeometry x:Key="AudioIcon" Figures="M14,3.23V5.29C16.89,6.15 19,8.83 19,12C19,15.17 16.89,17.85 14,18.71V20.77C18.01,19.86 21,16.28 21,12C21,7.72 18.01,4.14 14,3.23M16.5,12C16.5,10.23 15.5,8.71 14,7.97V16C15.5,15.29 16.5,13.76 16.5,12M3,9V15H7L12,20V4L7,9H3Z"/>
        <PathGeometry x:Key="CopyIcon" Figures="M19,21H8V7H19M19,5H8C6.89,5 6,5.89 6,7V21C6,22.1 6.9,23 8,23H19C20.1,23 21,22.1 21,21V7C21,5.89 20.1,5 19,5M16,1H4C2.89,1 2,1.89 2,3V17H4V3H16V1Z"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- TOOLBAR -->
        <!-- ============================================ -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Load Image Button -->
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding OpenImageCommand}"
                        ToolTip="Load image from file">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📁" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Load Image" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Capture Screen Region Button -->
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding CaptureScreenRegionCommand}"
                        ToolTip="Capture screen region">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📷" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Capture Region" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Run OCR Button -->
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding RunOcrCommand}"
                        ToolTip="Extract text using OCR">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔍" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Run OCR" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Separator -->
                <Separator Margin="10,0" VerticalAlignment="Center" Height="30"/>

                <!-- Export Buttons -->
                <Button Style="{StaticResource ExportButtonStyle}"
                        Background="#4CAF50"
                        Command="{Binding ExportTxtCommand}"
                        ToolTip="Export as TXT">
                    <TextBlock Text="TXT" FontWeight="SemiBold"/>
                </Button>

                <Button Style="{StaticResource ExportButtonStyle}"
                        Background="#FF5722"
                        Command="{Binding ExportPdfCommand}"
                        ToolTip="Export as PDF">
                    <TextBlock Text="PDF" FontWeight="SemiBold"/>
                </Button>

                <Button Style="{StaticResource ExportButtonStyle}"
                        Background="#2196F3"
                        Command="{Binding ExportDocxCommand}"
                        ToolTip="Export as DOCX">
                    <TextBlock Text="DOCX" FontWeight="SemiBold"/>
                </Button>

                <!-- Separator -->
                <Separator Margin="10,0" VerticalAlignment="Center" Height="30"/>

                <!-- Generate Audio Button -->
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Background="#9C27B0"
                        Command="{Binding GenerateAudioCommand}"
                        ToolTip="Generate audio from text">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔊" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Generate Audio" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Copy Text Button -->
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Background="#607D8B"
                        Command="{Binding CopyTextCommand}"
                        ToolTip="Copy text to clipboard">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Copy" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- ============================================ -->
        <!-- MAIN CONTENT AREA -->
        <!-- ============================================ -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <!-- Left Panel: Image Preview -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer -->
                <ColumnDefinition Width="15"/>
                <!-- Right Panel: OCR Output -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ============================================ -->
            <!-- LEFT PANEL: IMAGE PREVIEW -->
            <!-- ============================================ -->
            <Border Grid.Column="0" 
                    Background="#F3F3F3" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Title -->
                    <TextBlock Grid.Row="0" 
                               Text="Image Preview" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,15"/>

                    <!-- Image Display Area -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            BorderBrush="#D0D0D0" 
                            BorderThickness="1"
                            CornerRadius="4">
                        <Grid>
                            <!-- Image Display -->
                            <Image Source="{Binding CurrentImage}" 
                                   Stretch="Uniform"
                                   Visibility="{Binding CurrentImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <!-- No Image Placeholder -->
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding CurrentImage, Converter={StaticResource InverseNullToVisibilityConverter}}">
                                <TextBlock Text="📷" 
                                           FontSize="48" 
                                           Foreground="#CCCCCC"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="No Image" 
                                           FontSize="18" 
                                           Foreground="#999999"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Load an image or capture screen region" 
                                           FontSize="12" 
                                           Foreground="#BBBBBB"
                                           HorizontalAlignment="Center"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- RIGHT PANEL: OCR OUTPUT -->
            <!-- ============================================ -->
            <Border Grid.Column="2" 
                    Background="#FAFAFA" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Title -->
                    <TextBlock Grid.Row="0" 
                               Text="Extracted Text" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,15"/>

                    <!-- Text Output Area -->
                    <TextBox Grid.Row="1"
                             Text="{Binding ExtractedText, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             FontFamily="Segoe UI"
                             Background="White"
                             BorderBrush="#D0D0D0"
                             BorderThickness="1"
                             Padding="10"
                             IsReadOnly="True"
                             VerticalContentAlignment="Top"
                             HorizontalContentAlignment="Left"/>
                </Grid>
            </Border>
        </Grid>

        <!-- ============================================ -->
        <!-- STATUS BAR -->
        <!-- ============================================ -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="#666666"
                           VerticalAlignment="Center"/>

                <!-- Busy Indicator -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="⏳" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Processing..." 
                               FontSize="12" 
                               Foreground="#666666"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
